@model AerolineaMVC.Models.Vuelo

@{
    ViewData["Title"] = "Crear Vuelo";
}

<h2>Crear Vuelo</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Origen">Origen</label>
        <input type="text" class="form-control" asp-for="Origen" required />
    </div>

    <div class="form-group">
        <label for="Destino">Destino</label>
        <input type="text" class="form-control" asp-for="Destino" required />
    </div>

    <div class="form-group">
        <label for="Fecha">Fecha</label>
        <input type="date" class="form-control" asp-for="Fecha" required />
    </div>

    <div class="form-group">
        <label for="Disponibilidad">Disponibilidad</label>
        <select class="form-control" asp-for="Disponibilidad">
            <option value="true">Disponible</option>
            <option value="false">No Disponible</option>
        </select>
    </div>

    <div class="form-group">
        <label for="CantidadAsientos">Cantidad de Asientos</label>
        <input type="number" class="form-control" asp-for="CantidadAsientos" min="1" required />
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
