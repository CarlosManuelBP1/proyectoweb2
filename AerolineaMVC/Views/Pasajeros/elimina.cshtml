@model Pasajero

<h2>Confirmar Borrado</h2>

<p>¿Estás seguro de que deseas borrar el siguiente pasajero?</p>

<div>
    <strong>Nombre:</strong> @Model.Nombre
</div>
<div>
    <strong>Documento:</strong> @Model.Documento
</div>
<div>
    <strong>Edad:</strong> @Model.Edad
</div>
<div>
    <strong>Contacto de emergencia:</strong> @Model.ContactoEmergenciaNombre
</div>
<div>
    <strong>Contacto de emergencia:</strong> @Model.ContactoEmergenciaCorreo
</div>
<div>
    <strong>Contacto de emergencia:</strong> @Model.ContactoEmergenciaCelular
</div>
<div>
    <strong>Reserva:</strong> @ViewBag.NombreReserva
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" /> <button type="submit">Confirmar Borrado</button>
    <a asp-action="Details" asp-route-id="@Model.Id">Cancelar</a>
</form>