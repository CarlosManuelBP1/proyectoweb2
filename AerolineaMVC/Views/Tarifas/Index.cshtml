@model IEnumerable<AerolineaMVC.Models.Tarifa>

@{
    ViewData["Title"] = "Listado de Tarifas";
}

<h1>Listado de Tarifas</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Crear Nueva Tarifa</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Tipo</th>
            <th>Precio</th>
            <th>Vuelo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Tipo</td>
                <td>@item.Precio</td>
                <td>@item.Vuelo?.Destino</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
