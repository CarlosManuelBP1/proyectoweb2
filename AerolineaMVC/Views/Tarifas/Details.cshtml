@model AerolineaMVC.Models.Tarifa

@{
    ViewData["Title"] = "Detalles de la Tarifa";
}

<h2>Detalles de la Tarifa</h2>
<div class="card">
    <div class="card-body">
        <h5 class="card-title">Tipo: @Model.Tipo</h5>
        <p class="card-text"><strong>Precio:</strong> $@Model.Precio</p>
        <p class="card-text"><strong>Vuelo:</strong> @Model.Vuelo?.Destino</p>
        <p class="card-text"><strong>Asientos disponibles:</strong> @Model.Vuelo?.AsientosDisponibles</p>
    </div>
</div>
<a asp-action="Index" class="btn btn-secondary mt-3">Volver</a>
